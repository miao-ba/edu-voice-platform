# 專案整體配置
PROJECT_NAME=edu-voice-platform
ENVIRONMENT=development

# 資料庫配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=eduvoice
DB_USER=eduvoice
DB_PASSWORD=eduvoicepass

# 向量資料庫配置
VECTOR_DB_HOST=pgvector
VECTOR_DB_PORT=5432
VECTOR_DB_NAME=eduvoice_vector
VECTOR_DB_USER=eduvoice
VECTOR_DB_PASSWORD=eduvoicepass

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Kafka 配置
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# 跨服務 API 位址
API_GATEWAY_URL=http://api-gateway:8000
AUTH_SERVICE_URL=http://auth-service:8001
CORE_SERVICE_URL=http://core:8002
AUDIO_SERVICE_URL=http://audio-service:8003
AI_SERVICE_URL=http://ai-service:8004
CONTENT_SERVICE_URL=http://content-service:8005

# 檔案儲存路徑
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# JWT 認證
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7